<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".namesActivity"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:text="הכנס שמות"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="35sp"/>

    <TextView
        android:id="@+id/clientNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="Client name updated"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/saveNameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_alignParentRight="true"
        android:text="הוסף שם"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:layout_toRightOf="@+id/saveNameButton"

        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/scrollNamesView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:scrollbars = "vertical"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="35sp"/>

    <Button
        android:id="@+id/startRangeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:text="שלב הבא" />


</RelativeLayout>
