<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newRangeActivity"
    tools:ignore="UseSwitchCompatOrMaterialXml">


    <TextView
        android:id="@+id/drill1textview"
        android:layout_marginStart="61dp"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Drill"
        android:textSize="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drill2textview"
        app:layout_constraintStart_toEndOf="@+id/drill1textview"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:text="Drill"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/drill3textview"
        app:layout_constraintStart_toEndOf="@+id/drill2textview"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="Drill"
        android:textColor="@android:color/black"
        android:textSize="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:textColor="#FFFFFF"
        android:id="@+id/scorestable"
        android:layout_width="409dp"
        android:layout_height="699dp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
